<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<p class="lead my-3">
  <%= @question.body %>
</p>

<%= link_to 'Show', question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
            data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            }, value: "Destroy" %>
<hr class="my-3">

<h2 class="mt-3">Write your answer</h2>

<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit question!", class: 'btn btn-primary' %>

<% end %>

<hr />

<h2 class="mt-3">Answers:</h2>

<% @answers.each do |answer| %>
  <article class="card mt-3">
    <div class="card-body">
      <section class="card-text">
        <p class="my-2">
          <%= answer.body %>
        </p>

        <time datetime="<%= answer.formatted_created_at %>">
          <small><%= answer.formatted_created_at %></small>
        </time>
      </section>
    </div>
  </article>

<% end %>